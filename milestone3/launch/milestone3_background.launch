<?xml version="1.0"?>

<launch>

  <!-- <arg name="world/map" default="tutorial_1.world"/> -->

  <arg name="map_frame" default="map"/>
  <arg name="camera_frame" default="cf1/camera_link"/>
  <arg name="base_frame" default="cf1/base_link"/>



  <group>
    <include file="$(find dd2419_launch)/launch/base.launch" />
    <!-- <include file="$(find dd2419_simulation)/launch/simulation.launch" /> -->
    <!-- <include file="$(find dd2419_simulation)/launch/aruco.launch" /> -->
    <!-- <include file="$(find flight_camp)/launch/aruco_drone_tf.launch" /> -->

    <include file="$(find milestone3)/launch/multi_road_sign_pose.launch" /> -->
    <node type="Localization_V2.py" name="Localization" pkg="milestone3" output="screen" />

    <node pkg="milestone2" type="clear_checkpoint_service" name="clear_checkpoint_service" />

    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find milestone3)/include/milestone3.rviz" output="screen" />
    <!-- <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_odom" args="0 0 0 0 0 0 1 map cf1/odom" /> -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="cam_to_drone" args="0.01 0 0.02 -1.57 0 -1.57 $(arg base_frame) $(arg camera_frame)" />

    <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_aruco_0" args="1.44 1.33 0.6 1.57 -1.57 0 map aruco_0" />
    <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_aruco_1" args="0.84 0.45 0.6 1.57 -1.57 0 map aruco_1" />
    <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_aruco_2" args="0.41 1.99 0.6 1.57 -1.57 1.57 map aruco_2" />
    <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_aruco_3" args="3.24 -0.49 0.6 1.57 -1.57 -1.57 map aruco_3" />
    <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_aruco_4" args="2.26 1.33 0.6 1.57 -1.57 3.14 map aruco_4" />
    <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_aruco_5" args="4.19 0.93 0.6 1.57 -1.57 0 map aruco_5" />
    <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_aruco_6" args="-1.79 0.53 0.45 1.57 -1.57 3.14 map aruco_6" />



  </group>

</launch>

